printf '\033]2;Ghost Framework\a'

#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="\033[1;31m"
#green start
	GNS="-e \033[1;32m"
#white start
        WHS="\033[0;97m"

if [[ -d ~/ghost ]]
then
{
cd ~/ghost
} &> /dev/null
python ghost.py
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/ghost.git
cd ~/ghost
} &> /dev/null
python ghost.py
else
cd ~
sleep 1
exit
fi
fi
